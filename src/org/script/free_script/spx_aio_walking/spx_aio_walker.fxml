<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity"
      minWidth="-Infinity" spacing="60.0" style="-fx-background-color: #1a1818;"
      xmlns="http://javafx.com/javafx/9"
      fx:controller="org.script.free_script.spx_aio_walking.WalkingGUIController">
    <children>
        <VBox alignment="TOP_CENTER">
            <children>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label fx:id="logo_first" alignment="CENTER_RIGHT" maxHeight="1.7976931348623157E308"
                               maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity"
                               style="-fx-font-family: 'Fjalla One'; -fx-font-size: 35;" text="SPX" textFill="#fbf9fa">
                            <font>
                                <Font size="35.0"/>
                            </font>
                        </Label>
                        <Label fx:id="logo_second" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                               minHeight="-Infinity" minWidth="-Infinity"
                               style="-fx-font-family: 'Fjalla One'; -fx-font-size: 35;" text="AIO WALKING"
                               textFill="#a82219">
                            <font>
                                <Font size="35.0"/>
                            </font>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </HBox>
                <Separator prefWidth="270.0" style="-fx-border-radius: 5px;">
                    <VBox.margin>
                        <Insets left="15.0" right="15.0"/>
                    </VBox.margin>
                </Separator>
            </children>
        </VBox>
        <VBox alignment="CENTER" spacing="15.0" VBox.vgrow="ALWAYS">
            <children>
                <ComboBox fx:id="locations" maxWidth="200.0" minWidth="200.0" prefHeight="30.0" prefWidth="200.0"
                          promptText="Location"
                          style="-fx-border-color: #fbf9fa; -fx-background-color: #fbf9fa; -fx-border-radius: 5px;"/>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <TextField fx:id="location_name" prefHeight="30.0" prefWidth="95.0" promptText="Name">
                            <font>
                                <Font size="12.0"/>
                            </font>
                        </TextField>
                        <TextField fx:id="location_position" prefHeight="30.0" prefWidth="95.0"
                                   promptText="0000,0000,0">
                            <font>
                                <Font size="12.0"/>
                            </font>
                        </TextField>
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="90.0">
                    <children>
                        <Hyperlink fx:id="view_map" focusTraversable="false" text="View map">
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </Hyperlink>
                        <Button fx:id="add_location" mnemonicParsing="false" prefHeight="30.0"
                                style="-fx-background-color: #a82219;" text="ADD" textFill="#fbf9fa">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </HBox>
            </children>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
        </VBox>
        <VBox alignment="BOTTOM_CENTER">
            <children>
                <HBox alignment="BOTTOM_CENTER">
                    <children>
                        <Button fx:id="start" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0"
                                style="-fx-background-color: #a82219;" text="START" textFill="#fbf9fa">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
        </VBox>
    </children>
    <padding>
        <Insets bottom="15.0" left="10.0" right="10.0" top="5.0"/>
    </padding>
</VBox>
